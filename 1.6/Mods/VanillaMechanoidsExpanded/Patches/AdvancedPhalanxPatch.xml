<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biotech</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>
				<ThingDef ParentName="BaseMechanoid">
					<defName>VFE_Mech_Advanced_Phalanx_PlayerControlled</defName>
					<label>hoplite</label>
					<description>The Hoplite is an advanced version of the Phalanx, a bulking mechanoid based on a rhinoceros beetle body plan. The hoplite's plasteel carapace hides a very powerful cryogenic engine capable of constantly producing compacted pellets of supercooled gas. These are fired from an aperture at the mechanoid's head.\n\nThis cryo-weapon has a very low range, but it can be very dangerous for beings susceptible to frostbite.</description>
					<statBases>
						<MoveSpeed>2.5</MoveSpeed>
						<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
						<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
						<PsychicSensitivity>0.75</PsychicSensitivity>
						<BandwidthCost>5</BandwidthCost>
						<MechEnergyLossPerHP>0.15</MechEnergyLossPerHP>
					</statBases>
					<tools>
						<li>
							<label>head</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>26</power>
							<cooldownTime>2.6</cooldownTime>
							<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
							<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
						</li>
					</tools>
					<race>
						<intelligence>ToolUser</intelligence>
						<thinkTreeMain>Mechanoid</thinkTreeMain>
						<body>MechanicalCentipede</body>
						<baseBodySize>1.7</baseBodySize>
						<baseHealthScale>4.5</baseHealthScale>
						<lifeStageAges>
							<li>
								<def>MechanoidFullyFormed</def>
								<minAge>0</minAge>
								<soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
								<soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
								<soundCall>Pawn_Mech_Centipede_Call</soundCall>
							</li>
							<li MayRequire="Ludeon.RimWorld.Biotech">
								<def>MechanoidFullyFormed</def>
								<minAge>100</minAge>
								<soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
								<soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
								<soundCall>Pawn_Mech_Centipede_Call</soundCall>
							</li>
						</lifeStageAges>
						<soundCallIntervalRange>1000~2000</soundCallIntervalRange>
						<soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
						<soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
						<soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
						<mechWeightClass>Heavy</mechWeightClass>
					</race>
					<butcherProducts>
						<Steel>30</Steel>
						<Plasteel>5</Plasteel>
						<ComponentIndustrial>1</ComponentIndustrial>
					</butcherProducts>
				</ThingDef>
				<PawnKindDef ParentName="BaseMechanoidKind">
					<defName>VFE_Mech_Advanced_Phalanx_PlayerControlled</defName>
					<label>hoplite</label>
					<race>VFE_Mech_Advanced_Phalanx_PlayerControlled</race>
					<combatPower>350</combatPower>
					<allowInMechClusters>false</allowInMechClusters>
					<isFighter>false</isFighter>
					<lifeStages>
						<li MayRequire="Ludeon.Rimworld.Biotech">
							<bodyGraphicData>
								<texPath>Things/Pawn/Mechanoid/AM_Advanced_Mechs/AM_MechHoplite/AM_MechHoplite</texPath>
								<maskPath>Things/Pawn/Mechanoid/AM_Advanced_Mechs/AM_MechHoplite/AllegianceOverlays/AM_MechHoplite_Overlay</maskPath>
								<shaderType>CutoutWithOverlay</shaderType>
								<graphicClass>Graphic_Multi</graphicClass>
								<drawSize>4</drawSize>
								<shadowData>
									<volume>(0.6, 0.8, 0.6)</volume>
								</shadowData>
							</bodyGraphicData>
						</li>
						<li>
							<bodyGraphicData>
								<texPath>Things/Pawn/Mechanoid/AM_Advanced_Mechs/AM_MechHoplite/AM_MechHoplite</texPath>
								<maskPath>Things/Pawn/Mechanoid/AM_Advanced_Mechs/AM_MechHoplite/AllegianceOverlays/AM_MechHoplite_Overlay</maskPath>
								<shaderType>CutoutWithOverlay</shaderType>
								<graphicClass>Graphic_Multi</graphicClass>
								<drawSize>4</drawSize>
								<shadowData>
									<volume>(0.6, 0.8, 0.6)</volume>
								</shadowData>
							</bodyGraphicData>
						</li>
					</lifeStages>
					<weaponMoney>9999~9999</weaponMoney>
					<weaponTags>
						<li>AM_MechanoidCryoweapon</li>
					</weaponTags>
				</PawnKindDef>
				<RecipeDef ParentName="AM_HeavyMechanoidRecipe">
					<defName>AM_HopliteRecipe</defName>
					<label>gestate hoplite</label>
					<description>Gestate a hoplite mechanoid.</description>
					<researchPrerequisite>AM_AlphaHardwareUpgrade</researchPrerequisite>
					<ingredients Inherit="False">
						<li>
							<filter>
								<thingDefs>
									<li>Steel</li>
								</thingDefs>
							</filter>
							<count>250</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>Plasteel</li>
								</thingDefs>
							</filter>
							<count>175</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>ComponentIndustrial</li>
								</thingDefs>
							</filter>
							<count>10</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>VFE_ComponentMechanoid</li>
								</thingDefs>
							</filter>
							<count>1</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>SubcoreHigh</li>
								</thingDefs>
							</filter>
							<count>1</count>
						</li>
					</ingredients>
					<products>
						<VFE_Mech_Advanced_Phalanx_PlayerControlled>1</VFE_Mech_Advanced_Phalanx_PlayerControlled>
					</products>
					<descriptionHyperlinks>
						<ThingDef>VFE_Mech_Advanced_Phalanx_PlayerControlled</ThingDef>
					</descriptionHyperlinks>
				</RecipeDef>
			</value>
		</match>
	</Operation>
</Patch>
