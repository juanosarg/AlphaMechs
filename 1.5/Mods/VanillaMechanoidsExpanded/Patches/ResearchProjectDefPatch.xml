		<mods>
			<li>Biotech</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>
				<ResearchProjectDef ParentName="AM_MechtechBase">
					<defName>AM_AlphaHardwareUpgrade</defName>
					<label>alpha hardware upgrade</label>
